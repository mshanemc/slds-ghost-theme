{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<div class="slds-page-header" role="banner">
  <div class="slds-grid">
    <div class="slds-col slds-has-flexi-truncate">
      <div class="slds-media">
        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon--large slds-icon-standard-user">
            <use xlink:href="/assets/icons/custom-sprite/svg/symbols.svg#custom9"></use>
          </svg>
        </div>
        <div class="slds-media__body">
          <p class="slds-text-heading--label">{{@blog.description}}</p>
          <div class="slds-grid">
            <a href="{{@blog.url}}">
                <h1 class="slds-text-heading--medium slds-m-right--small slds-truncate slds-align-middle" title="{{@blog.title}}">{{@blog.title}}</h1>                
            </a>
          </div>
        </div>
      </div>
    </div>
    <div class="slds-col slds-no-flex slds-align-bottom">
      <div class="slds-button-group" role="group">
        <a href="/rss/">
            <button class="slds-button slds-button--neutral">Subscribe</button>
        </a>
        <div class="slds-button--last">
            <a href="/about-me/">
                <button class="slds-button slds-button--neutral">About</button>
            </a>
        </div>
      </div>
    </div>
  </div>
  <div class="slds-grid slds-page-header__detail-row">
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate" title="Field 1">Author</p>
        </dt>
        <dd>
          <p class="slds-text-body--regular slds-truncate" title="Description that demonstrates truncation with a long text field">
            <a href="/about-me/">Shane McLaughlin</a>
          </p>
        </dd>
      </dl>
    </div>
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate" title="Field2 (3)">Twitter            
          </p>
        </dt>
        <dd>
          <p class="slds-text-body--regular">
            <a href="https://twitter.com/mshanemc" target="_blank">@mshanemc</a>
          </p>
        </dd>
      </dl>
    </div>
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate" title="Field 3">Github</p>
        </dt>
        <dd><a href="https://github/mshanemc" target="_blank">github/mshanemc</a></dd>
      </dl>
    </div>
    <div class="slds-col--padded slds-size--1-of-4">
      <dl>
        <dt>
          <p class="slds-text-heading--label slds-truncate" title="Field 4">Location</p>
        </dt>
        <dd>
          <p>
            <span>Houston, TX</span>
          </p>
        </dd>
      </dl>
    </div>
  </div>
</div>
