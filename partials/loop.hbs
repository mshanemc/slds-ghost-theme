{{#foreach posts}}
<article class="slds-tile slds-m-bottom--large">
  <p class="slds-tile__title slds-text-heading--small" ><a href="{{url}}">{{{title}}}</a></p>
  
  <div class="slds-tile__detail slds-text-body--regular">
    <p class="excerpt">
        {{excerpt words="90"}}
        <a class="read-more" href="{{url}}">&raquo;</a>
    </p>
  </div>

</article>
{{/foreach}}

