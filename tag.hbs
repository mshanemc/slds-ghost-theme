{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! If we have a tag cover, display that - else blog cover - else nothing }}
<div class="slds-page-header" role="banner">
  <div class="slds-grid">
    <div class="slds-col slds-has-flexi-truncate">
      <div class="slds-media">
        <div class="slds-media__figure">
          <svg aria-hidden="true" class="slds-icon slds-icon--large slds-icon-standard-user">
            <use xlink:href="/assets/icons/standard-sprite/svg/symbols.svg#topic"></use>
          </svg>
        </div>
        <div class="slds-media__body">
          <p class="slds-text-heading--label">
          <a href="{{@blog.url}}">Unnecessary Use of Force</a>> Topic Tags
          </p>
          <div class="slds-grid">
            
                <h1 class="slds-text-heading--medium slds-m-right--small slds-truncate slds-align-middle" title="{{@blog.title}}">{{tag.name}}</h1>                
          </div>
        </div>
      </div>
    </div>
    <div class="slds-col slds-no-flex slds-align-bottom">
      <div class="slds-button-group" role="group">
        <a href="/rss/">
            <button class="slds-button slds-button--neutral">Subscribe</button>
        </a>
        <div class="slds-button--last">
            <a href="/about-me/">
                <button class="slds-button slds-button--neutral">About</button>
            </a>
        </div>
      </div>
    </div>
  </div>
  <div class="slds-grid slds-page-header__detail-row">
    {{#if tag.description}}
                    {{tag.description}}
                {{else}}
                    A {{pagination.total}}-post collection
                {{/if}}
  </div>
</div>

